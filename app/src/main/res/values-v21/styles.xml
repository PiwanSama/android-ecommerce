<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/mutedText</item>
        <item name="android:colorControlHighlight">@color/mutedText</item>
        <item name="android:colorControlActivated">@color/mutedText</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textColorPrimary">@color/fontColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mutedText</item>
    </style>

    <style name="AllCapsTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MutedText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/mutedText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

</resources>
