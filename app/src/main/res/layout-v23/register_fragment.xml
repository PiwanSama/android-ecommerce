<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/reg_bg"
    android:animateLayoutChanges="true">

    <!--TODO Get all icons for textviews -->

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_medicine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/welcome"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/register"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/reg_email"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:background="@color/email_red"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="?android:attr/buttonBarButtonStyle"
        app:icon="@drawable/ic_email_24px"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/phone_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/reg_phone"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:background="@color/phone_green"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="?android:attr/buttonBarButtonStyle"
        app:icon="@drawable/ic_phone_24px"
        />

</LinearLayout>