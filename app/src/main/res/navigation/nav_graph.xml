<?xml version="1.0" encoding="utf-8"?>
<navigation
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/orderDetailFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cti.lifego.fragments.HomeFragment"
        android:label="LifeGo"
        app:enterAnim="@anim/fade_in"
        tools:layout="@layout/home_fragment">
    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.cti.lifego.fragments.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/orders_fragment" />

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.cti.lifego.fragments.ProductDetailFragment"
        android:label="Product"
        tools:layout="@layout/product_detail" >

    </fragment>

    <fragment
        android:id="@+id/storesListFragment"
        android:name="com.cti.lifego.fragments.ListStoresFragment"
        android:label="Stores"
        tools:layout="@layout/list_stores">
        <action
            android:id="@+id/action_storesListFragment_to_browseStoreFragment"
            app:destination="@id/browseStoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/browseStoreFragment"
        android:name="com.cti.lifego.fragments.BrowseStoreFragment"
        android:label="Browse"
        tools:layout="@layout/browse_store" >
        <action
            android:id="@+id/action_browseStoreFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cti.lifego.fragments.LoginFragment"
        android:label="Log In"
        tools:layout="@layout/login_fragment">

    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.cti.lifego.fragments.UserDetailsFragment"
        android:label="My Profile"
        tools:layout="@layout/user_profile" />

    <fragment
        android:id="@+id/checkoutLocationFragment"
        android:name="com.cti.lifego.fragments.CheckoutLocation"
        android:label="@string/delivery_location"
        tools:layout="@layout/checkout_location" >
        <action
            android:id="@+id/action_checkoutLocationFragment_to_checkoutPricingFragment"
            app:destination="@id/checkoutPricingFragment" />
    </fragment>

    <fragment
        android:id="@+id/checkoutPricingFragment"
        android:name="com.cti.lifego.fragments.CheckoutPayment"
        android:label="Payment"
        tools:layout="@layout/checkout_payment" >
        <action
            android:id="@+id/action_checkoutPricingFragment_to_checkoutSuccessFragment"
            app:destination="@id/checkoutSuccessFragment" />
    </fragment>

    <fragment
        android:id="@+id/checkoutSuccessFragment"
        android:name="com.cti.lifego.fragments.CheckoutSuccess"
        android:label="Success"
        tools:layout="@layout/checkout_success">
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.cti.lifego.fragments.CartFragment"
        tools:layout="@layout/cart_fragment"
        android:label="Cart" >

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.cti.lifego.fragments.RegistrationFragment"
        tools:layout="@layout/registration_fragment" />

    <fragment
        android:id="@+id/uploadPrescriptionFragment"
        android:name="com.cti.lifego.fragments.UploadPrescriptionFragment"
        android:label="Upload Prescription"
        tools:layout="@layout/upload_prescription" />

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.cti.lifego.fragments.OrderDetailFragment"
        android:label="@string/order"
        tools:layout="@layout/single_order_details" />

    <action
        android:id="@+id/action_open_cart"
        app:destination="@id/cartFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out" />

    <action
        android:id="@+id/action_homeFragment_to_ordersFragment"
        app:destination="@id/ordersFragment"
        app:enterAnim="@anim/fade_in"
        app:popUpTo="@+id/homeFragment"
        app:popUpToInclusive="false" />

    <action
        android:id="@+id/action_homeFragment_to_profileFragment"
        app:destination="@id/userProfileFragment"
        app:enterAnim="@anim/fade_in"
        app:popUpTo="@+id/homeFragment"
        app:popUpToInclusive="false" />

</navigation>