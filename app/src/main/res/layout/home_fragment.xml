<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:rippleColor="@color/lightGrey">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/groceries"
                android:foreground="@drawable/image_gradient" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groceries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toTopOf="@id/cat_desc"
                android:layout_marginStart="@dimen/margin_start" />

            <TextView
                android:id="@+id/cat_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_details"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="10sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:rippleColor="@color/lightGrey">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pills"
                android:foreground="@drawable/image_gradient" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groceries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toTopOf="@id/cat_desc"
                android:layout_marginStart="@dimen/margin_start" />

            <TextView
                android:id="@+id/cat_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_details"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="10sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:rippleColor="@color/lightGrey">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/farm"
                android:foreground="@drawable/image_gradient" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groceries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toTopOf="@id/cat_desc"
                android:layout_marginStart="@dimen/margin_start" />

            <TextView
                android:id="@+id/cat_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_details"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="10sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:rippleColor="@color/lightGrey">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/appliances"
                android:foreground="@drawable/image_gradient" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groceries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toTopOf="@id/cat_desc"
                android:layout_marginStart="@dimen/margin_start" />

            <TextView
                android:id="@+id/cat_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_details"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_start"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>