<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="com.cti.lifego.utils.StringUtils"/>
        <variable
            name="cartItemView"
            type="com.cti.lifego.viewmodels.CartItemViewModel" />

        <variable
            name="cartItem"
            type="com.cti.lifego.models.CartItem" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:elevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/product_name_desc"
                    android:scaleType="fitCenter"
                    android:src="@{cartItem.product.image}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@{cartItem.product.name}"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/product_image" />

                    <TextView
                        android:id="@+id/product_unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@{StringUtils.bigDecimalToString(cartItem.product.price)}"
                        app:layout_constraintTop_toBottomOf="@id/product_name"
                        app:layout_constraintStart_toEndOf="@id/product_image"
                        />


                    <LinearLayout
                        android:id="@id/textinput_counter"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toEndOf="@id/product_image"
                        app:layout_constraintTop_toBottomOf="@id/product_unit_price"
                        app:layout_constraintBottom_toTopOf="@id/divider"
                        android:weightSum="3">

                        <ImageView
                            android:id="@+id/increase_count"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_minus"
                            android:layout_weight="1"
                            android:onClick="@{()-> cartItemView.increaseQuantity(context)}"/>

                        <TextView
                            android:id="@+id/product_quantity"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="@{cartItemView.cartItem.quantity}"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/decrease_count"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_plus"
                            android:layout_weight="1"
                            android:onClick="@{()-> cartItemView.decreaseQuantity(context)}"/>

                    </LinearLayout>


                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/product_image"
                        style="@style/Divider.Horizontal"/>


                    <TextView
                        android:id="@+id/total_item_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{StringUtils.bigDecimalToString(cartItem.totalCost)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_trash"
                        android:onClick="@{()-> cartItemView.deleteItem(context)}"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>