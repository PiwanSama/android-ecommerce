<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nullFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders_blank"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/orders_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders_title"
                android:textStyle="bold"
                android:layout_margin="15sp"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/orders_title"
                app:layout_constraintBottom_toTopOf="@+id/item2">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/product_sample_name"
                    android:textColor="@null"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/CustomName"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="0dp"
                        android:layout_height="150sp"
                        android:layout_weight="1"
                        android:src="@drawable/med2"
                        android:scaleType="centerInside"
                        android:layout_margin="10sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:contentDescription="@string/product_name_desc" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="150sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/product_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/product_price"
                            android:text="@string/med_qty"/>

                        <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/product_order_date"
                            android:text="@string/med_price"/>

                        <TextView
                            android:id="@+id/product_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/status_button"
                            android:text="@string/order_date"/>

                        <Button
                            android:id="@+id/status_button"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_margin="10sp"
                            android:text="@string/status"
                            android:textSize="12sp"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item1">

                <TextView
                    android:id="@+id/product_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/product_sample_name"
                    android:textColor="@null"
                    android:textAppearance="@style/CustomName"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/product_name1"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/product_image1"
                        android:layout_width="0dp"
                        android:layout_height="150sp"
                        android:layout_weight="1"
                        android:src="@drawable/med1"
                        android:scaleType="centerInside"
                        android:layout_margin="10sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:contentDescription="@string/product_name_desc" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="150sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/product_qty1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/product_price1"
                            android:text="@string/med_qty"/>

                        <TextView
                            android:id="@+id/product_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/product_order_date1"
                            android:text="@string/med_price"/>

                        <TextView
                            android:id="@+id/product_order_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/status_button1"

                            android:text="@string/order_date"/>

                        <Button
                            android:id="@+id/status_button1"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_margin="10sp"
                            android:text="@string/status_delivered"
                            android:textSize="12sp"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>