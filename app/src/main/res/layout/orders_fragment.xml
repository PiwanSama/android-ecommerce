<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nullFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders_blank"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/orders_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders_title"
        android:layout_margin="15sp"
        android:textAppearance="@style/CustomTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card"
        app:layout_constraintTop_toBottomOf="@id/orders_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardUseCompatPadding="true"

        app:cardCornerRadius="8sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/product_sample_name"
                android:textAppearance="@style/CustomProductName"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:src="@drawable/med2"
                    android:scaleType="centerInside"
                    android:layout_margin="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:contentDescription="@string/product_name_desc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/product_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/product_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/med_qty"/>

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/product_order_date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/med_price"/>

                    <TextView
                        android:id="@+id/product_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/status_button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/order_date"/>

                    <Button
                        android:id="@+id/status_button"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_margin="10sp"
                        android:text="@string/status"
                        android:clickable="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card1"
        app:layout_constraintTop_toBottomOf="@id/order_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardUseCompatPadding="true"
        android:padding="10sp"
        app:cardCornerRadius="8sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/product_sample_name"
                android:textAppearance="@style/CustomProductName"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/product_name1"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/product_image1"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:src="@drawable/med1"
                    android:scaleType="centerInside"
                    android:layout_margin="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:contentDescription="@string/product_name_desc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/product_qty1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/product_price1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/med_qty"/>

                    <TextView
                        android:id="@+id/product_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/product_order_date1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/med_price"/>

                    <TextView
                        android:id="@+id/product_order_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/status_button1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="@string/order_date"/>

                    <Button
                        android:id="@+id/status_button1"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_margin="10sp"
                        android:text="@string/status_delivered"
                        android:clickable="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>