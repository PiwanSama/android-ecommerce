<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/delivery_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_delivery_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map_holder"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <FrameLayout
        android:id="@+id/map_holder"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delivery_location_text"
        app:layout_constraintBottom_toTopOf="@id/confirm_location">

        <fragment
            android:id="@+id/location_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>