<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/skeleton</item>
        <item name="android:colorBackground">@color/colorLightGray</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomProductName" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomPrice" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMuted" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/mutedText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
    </style>

</resources>
